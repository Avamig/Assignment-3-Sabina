body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    background-color: #f0f0f0;
}

.clock {
    width: 200px;
    height: 200px;
    border: 8px solid #333;
    border-radius: 50%;
    position: relative;
    background-color: white;
}

.clock-face {
    width: 100%;
    height: 100%;
    position: relative;
    transform: translateY(-3px);
}

.hand {
    width: 50%;
    height: 6px;
    background: #333;
    position: absolute;
    top: 50%;
    transform-origin: 100%;
    transform: rotate(90deg);
    transition: all 0.05s;
    transition-timing-function: cubic-bezier(0.1, 2.7, 0.58, 1);
}

.hour-hand {
    height: 8px;
    animation: hour-move 10s linear infinite;
}

.minute-hand {
    height: 4px;
    animation: minute-move 10s linear infinite;
}

@keyframes hour-move {
    from {
        transform: rotate(90deg);
    }
    to {
        transform: rotate(120deg); /* 90 + 30 degrees */
    }
}

@keyframes minute-move {
    from {
        transform: rotate(90deg);
    }
    to {
        transform: rotate(450deg); /* 90 + 360 degrees */
    }
}
